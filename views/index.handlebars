<div class="container-fluid text-center">
    <div class="row">
        <div class="col-sm-1"></div>

        <div class="col-sm-10">
            <div class="jumbotron">
                <h1 class="display-4">Eat a Burger!</h1>

                <p>Input your own burger and watch the page update using Handlebars, Node and Express!</p>

                <a class="btn btn-primary btn-lg" href="https://bryanrkelley.github.io/Basic-Portfolio/" role="button"
                    target="_blank">Main Page</a>
            </div>
        </div>

        <div class="col-sm-1"></div>
    </div>

    <div class="row">
        <div class="col-xs-12 col-sm-9" class="task">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Burgers</h3>
                </div>
                <div class="panel-body">
                    {{#each burger_data}}
                        {{#unless this.devoured}}
                            <div class="col-xs-12 col-sm-9" class="task">
                                <pre>{{this.id}}. {{this.burger_name}}</pre>
                            </div>
                            <div class="col-xs-3 text-center">
                                <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
                                    <input type="hidden" name="burger_id" type="text" value={{this.id}}>
                                    <br>
                                    <button type="submit"  class="btn btn-primary">Eat it!</button>
                                </form>
                            </div>
                        {{/unless}}
                    {{/each}}
                </div>
            </div>
        </div>

        <div class="col-xs-12 col-sm-3">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Eaten Burgers</h3>
                    <div>
                        <div class="panel-body">
                            {{#each burger_data}}
                                {{#if this.devoured}}
                                    <input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger_name}}" readonly>
                                {{/if}}
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid text-center">
    <div class="row">
        <div class="col-xs-12 text-center enter_section">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Add A Burger</h3>
                    <div>
                        <div class="panel-body">
                            <form action="/burgers/create" method="POST">
                                <input type="text" name="burger_name" class="form-control" value="" id="enter_text">
                                <button type="submit" class="btn btn-primary" id="text-enter-button">Add Burger</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

